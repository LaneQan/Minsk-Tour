@model CourseProject.Models.AdminLogin
@section hidefooter {}


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Content/normalize.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/admin-login.css">
    <title>Админ-панель</title>
</head>
<body>


@using (Html.BeginForm("Login", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div id="form">
        <div class="form-group">
            @Html.LabelFor(m => m.Login, "Логин")
            @Html.EditorFor(m => m.Login, new {htmlAttributes = new {@class = "form-control"}})
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, "Пароль")
            @Html.EditorFor(m => m.Password, new {htmlAttributes = new {@class = "form-control", Type = "password"}})
        </div>
        <div class="accept">
            <button type="submit" class="btn btn-success btn-lg" value="Login">Войти</button>
        </div>
    </div>
}
</body>
</html>

